{
	"root": true,
	"ignorePatterns": ["**/*"],
	"plugins": ["@nx", "import"],
	"overrides": [
		{
			"files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
			"rules": {
				"@nx/enforce-module-boundaries": [
					"error",
					{
						"enforceBuildableLibDependency": true,
						"allow": [],
						"depConstraints": [
							{
								"sourceTag": "*",
								"onlyDependOnLibsWithTags": ["*"]
							}
						]
					}
				]
			}
		},
		{
			"files": ["*.ts", "*.tsx"],
			"extends": ["plugin:@nx/typescript"],
			"rules": {}
		},
		{
			"files": ["*.js", "*.jsx"],
			"extends": ["plugin:@nx/javascript"],
			"rules": {}
		}
	],
	"rules": {
		"react-hooks/exhaustive-deps": 0,
		"@typescript-eslint/no-explicit-any": "warn",
		"import/order": [
			"error",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index"
				],
				"newlines-between": "always",
				"pathGroups": [
					{
						"pattern": "~components",
						"group": "internal"
					},
					{
						"pattern": "~**/**",
						"group": "internal"
					}
				]
			}
		],
		"import/default": 0
	},
	"settings": {
		"import/parsers": {
			"@typescript-eslint/parser": [".ts", ".tsx"]
		}
	}
}
